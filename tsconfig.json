{
  "compilerOptions": {
    "module": "ES6",
    "target": "es2019",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react", // use typescript to transpile jsx to js
    "allowJs": true, // allow a partial TypeScript and JavaScript codebase
    "moduleResolution": "Node",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules",
    "**/*.d.ts",
    "./dist",
  ]
}
